<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="utf-8")
    title Express Gallery
    link(rel = 'stylesheet', href = '/css/styles.css')
  body(class = 'editPage')
    br
    form(action="/gallery/" + id + "/edit" + "?_method=put",method="post",id="form")
      div.input
        span.label Title &nbsp;
        input(type="text", name="title", value=json[0].title)
      br
      div.input
        span.label Author &nbsp;
        input(type="text", name="author", value=json[0].author)
      br
      div.input
        span.label Link &nbsp;
        input(type="text", name="url",value=json[0].url)
      br
      div.input
        div.label Description
        textarea(name="description", cols="40", rows="5", value = json[0].description) #{json[0].description}
      br
      input(type="submit" value="Submit Changes")